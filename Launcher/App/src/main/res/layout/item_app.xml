<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLaunch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"

    android:paddingBottom="13dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clipToPadding="false"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bkg_app"
            android:scaleType="centerCrop"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/moreButton"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_gravity="top|end"
        android:layout_margin="20dp"
        android:background="@drawable/ic_more_button"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/playtimeButton"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_gravity="top|start"
        android:layout_margin="23dp"
        android:background="@drawable/bkg_button_circle"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/sansserif"
        android:text="--:--"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        tools:ignore="HardcodedText"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/itemLabel"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="-13dp"
        android:elevation="100dp"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/sansserif"
        android:gravity="center"
        android:lineSpacingExtra="-5dp"
        android:maxLines="2"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="App Name" />

</FrameLayout>