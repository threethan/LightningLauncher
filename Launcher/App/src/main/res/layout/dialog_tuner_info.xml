<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bkg_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/tuner_banner_bg"
        android:padding="8dp"
        android:src="@drawable/tuner_banner_wide" />

    <ImageView
        android:id="@+id/dismissButton"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bkg_hover_button"
        android:src="@drawable/ic_back" />

    <TextView
        style="@style/SettingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:paddingTop="20dp"
        android:text="@string/tuner_info_tagline"
        android:textSize="24sp" />

    <com.threethan.launcher.activity.view.ViewFlinger
        android:id="@+id/imageBanner"
        android:layout_width="750dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:foreground="@drawable/flipper_fg">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tuner_info_header_a"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tuner_info_header_b"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tuner_info_header_c"/>
    </com.threethan.launcher.activity.view.ViewFlinger>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="25dp"
        android:ellipsize="end"
        android:text="@string/tuner_info_desc"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/purchaseButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/tuner_banner_bg"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:foreground="@drawable/flipper_fg"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="3dp"
            android:elevation="10dp"
            android:singleLine="true"
            android:text="@string/tuner_info_get_link"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:singleLine="true"
            android:text="@string/tuner_info_get"
            android:textSize="26sp" />

    </FrameLayout>

</LinearLayout>