<?xml version="1.0" encoding="utf-8"?>
<com.threethan.launcher.activity.view.SettingsFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants">

    <FrameLayout
        android:id="@+id/flipperPage1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/flipper_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|fill_horizontal"
            android:background="@drawable/bkg_flipper_page"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                style="@style/FlipperTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/flipper_page_1_title" />

            <TextView
                style="@style/FlipperText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/flipper_page_1_desc" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/flipperPage0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="VisualLintBounds">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/flipper_0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|fill_horizontal"
            android:background="@drawable/bkg_flipper_page"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                style="@style/FlipperTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/flipper_page_0_title" />

            <TextView
                style="@style/FlipperText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/flipper_page_0_desc" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/flipperPageTuner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="VisualLintBounds">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/flipper_tuner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|fill_horizontal"
            android:background="@drawable/bkg_flipper_page"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                style="@style/FlipperTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/flipper_page_tuner_title" />

            <TextView
                style="@style/FlipperText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/flipper_page_tuner_desc" />
        </LinearLayout>

    </FrameLayout>

</com.threethan.launcher.activity.view.SettingsFlipper>