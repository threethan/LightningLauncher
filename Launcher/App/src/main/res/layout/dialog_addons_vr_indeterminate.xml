<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:orientation="vertical"
    android:padding="0dp"
    tools:ignore="TextSizeCheck">

    <LinearLayout
        android:id="@+id/itemLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            style="@style/SettingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="@string/addons_main_vr" />

        <LinearLayout
            android:id="@+id/addonDockSuggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/SettingSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|start"
                android:text="@string/addons_dock_suggest_title" />

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="@drawable/lc_bkg_button_top"
                android:gravity="bottom|center"
                android:minHeight="30sp"
                android:text="@string/addons_dock_suggest_0" />

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="@drawable/lc_bkg_button_middle"
                android:gravity="bottom|center"
                android:minHeight="30sp"
                android:text="@string/addons_dock_suggest_1" />

            <TextView
                android:id="@+id/addonDockGotoButton"
                style="@style/SettingButtonLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/lc_bkg_button_bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:singleLine="true"
                android:text="@string/addons_dock_goto_button"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addonNavigatorSuggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:showIn="@layout/dialog_addons_vr_dock">

            <TextView
                style="@style/SettingSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|start"
                android:text="@string/addons_navigator_suggest_title" />

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="@drawable/lc_bkg_button_top"
                android:gravity="bottom|center"
                android:minHeight="30sp"
                android:text="@string/addons_navigator_suggest_0" />

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="@drawable/lc_bkg_button_middle"
                android:gravity="bottom|center"
                android:minHeight="30sp"
                android:text="@string/addons_navigator_suggest_1" />

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:background="@drawable/lc_bkg_button_middle"
                android:gravity="bottom|center"
                android:minHeight="30sp"
                android:text="@string/addons_navigator_suggest_2" />

            <TextView
                android:id="@+id/addonNavigatorGotoButton"
                style="@style/SettingButtonLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/lc_bkg_button_bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:singleLine="true"
                android:text="@string/addons_navigator_goto_button"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <TextView
            android:id="@+id/exitButton"
            style="@style/SettingButtonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/lc_bkg_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:text="@string/addons_exit"
            tools:ignore="NestedWeights">

        </TextView>

    </LinearLayout>
</ScrollView>