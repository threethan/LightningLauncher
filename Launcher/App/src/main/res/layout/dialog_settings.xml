<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:padding="0dp"
    tools:ignore="TextSizeCheck">

    <LinearLayout
        android:id="@+id/itemLaunch"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="17dp"
        android:paddingBottom="15dp">

        <View
            android:layout_width="465dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/dismissButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="-32dp"
            android:background="@drawable/bkg_hover_button"
            android:foreground="@drawable/lc_fg_focusable"
            android:src="@drawable/ic_back" />

        <TextView
            style="@style/SettingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-9dp"
            android:text="@string/settings_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/versionLabel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="-28dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="18dp"
            android:alpha="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="0.0.0" />

        <TextView
            android:id="@+id/variantLabel"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="-28dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.5"
            android:text="@string/app_variant_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            layout="@layout/flipper"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.threethan.launcher.activity.view.WidthAdaptiveLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:childMargin="10dp"
            app:widthThreshold="400dp">

            <com.threethan.launchercore.view.LcButton
                android:layout_weight="1"
                android:id="@+id/updateButton"
                style="@style/buttonHighlight"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:drawableEnd="@drawable/ic_update"
                android:drawablePadding="10dp"
                android:text="@string/settings_update"
                android:visibility="gone"
                tools:ignore="UnusedAttribute"
                tools:visibility="visible" />

            <com.threethan.launchercore.view.LcButton
                android:layout_weight="1"
                android:id="@+id/notifyUpdateButton"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:text="@string/settings_enable_updates"
                android:tooltipText="@string/settings_enable_updates_tip"
                android:visibility="gone"
                tools:ignore="UnusedAttribute"
                tools:visibility="visible" />
        </com.threethan.launcher.activity.view.WidthAdaptiveLinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SettingSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingTop="0dp"
                android:text="@string/behavior_header" />

            <com.threethan.launchercore.view.LcSwitch
                android:id="@+id/multitaskSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="-6dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="end"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:switchPadding="5dp"
                android:text="@string/new_multitasking"
                android:tooltipText="@string/new_multitasking_tip"
                tools:ignore="UnusedAttribute" />
        </FrameLayout>


        <LinearLayout
            android:layout_marginTop="-10dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <com.threethan.launchercore.view.LcSwitch
                    android:id="@+id/editModeSwitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/lc_bkg_button_section"
                    android:drawableStart="@drawable/ic_edit"
                    android:drawablePadding="10dp"
                    android:switchPadding="7dp"
                    android:text="@string/edit_mode"
                    android:tooltipText="@string/edit_mode_tip"
                    tools:ignore="UnusedAttribute" />

                <com.threethan.launchercore.view.LcButton
                    android:id="@+id/addWebsiteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/lc_bkg_button_section"
                    android:drawableStart="@drawable/ic_add"
                    android:drawablePadding="10dp"
                    android:foreground="@drawable/lc_fg_focusable"
                    android:text="@string/add_website"
                    android:visibility="gone">

                </com.threethan.launchercore.view.LcButton>

                <com.threethan.launchercore.view.LcButton
                    android:id="@+id/addonsButton"
                    style="@style/buttonHighlight"
                    android:layout_width="0dp"
                    android:background="@drawable/lc_bkg_button"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="2"
                    android:drawableEnd="@drawable/ic_dialog"
                    android:text="@string/settings_addons"
                    android:tooltipText="@string/settings_addons_tip"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/addonsAttract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                tools:visibility="visible"

                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:gravity="start|center_vertical"
                    android:drawablePadding="8dp"

                    android:backgroundTint="#111"
                    android:backgroundTintMode="add"
                    android:background="@drawable/lc_bkg_tooltip"
                    android:drawableStart="@drawable/ic_info"
                    android:lineSpacingExtra="-2sp"
                    android:text="@string/shortcuts_promo"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="80dp">

                    <View
                        android:backgroundTint="#111"
                        android:backgroundTintMode="add"
                        android:id="@+id/view"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="clip_vertical|center_horizontal"
                        android:background="@drawable/lc_bkg_tooltip_chevron" />
                </FrameLayout>
            </FrameLayout>


        </LinearLayout>
        <com.threethan.launchercore.view.LcSwitch
            android:id="@+id/forceUntranslatedSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/lc_bkg_button_section"
            android:switchPadding="7dp"
            android:text="@string/force_untranslated"
            android:tooltipText="@string/force_untranslated_tip"
            android:visibility="gone"
            tools:ignore="UnusedAttribute"
            tools:visibility="visible" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/SettingSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/background_header" />

            <com.threethan.launchercore.view.LcSwitch
                android:id="@+id/darkModeSwitch"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="-4dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="end"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:switchPadding="5dp"
                android:text="@string/dark_mode"
                android:tooltipText="@string/dark_mode_tip"
                tools:ignore="UnusedAttribute,UseSwitchCompatOrMaterialXml" />
        </FrameLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/lc_bkg_button"
            android:padding="0dp"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/background0"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_px_blue_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background1"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_px_grey_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background2"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_px_red_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background3"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_px_white_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background4"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_px_orange_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background5"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_px_green_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background6"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_px_purple_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background7"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_meta_dark_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background8"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_meta_light_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background9"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_warm_dark_icon"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/background_custom"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bkg_button_wallpaper"
                    android:foreground="@drawable/bkg_hover_button_wp"
                    android:paddingTop="3dp"
                    android:paddingBottom="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/bkg_custom"
                    tools:ignore="ImageContrastCheck" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >

            <com.threethan.launchercore.view.LcToggleButton
                android:id="@+id/iconHorizontalSwitch"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:background="@drawable/lc_bkg_button"
                android:drawableStart="@drawable/ic_icon_list_vert_sel"
                android:drawableEnd="@drawable/ic_icon_list_horiz_sel"
                android:paddingHorizontal="10dp"
                android:textOff=''
                android:textOn=''
                android:tooltipText="@string/icon_horizontal_tip" />
            <com.threethan.launcher.activity.view.WidthAdaptiveLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lc_bkg_button_section"
                android:backgroundTint="#0000"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="0dp"
                app:childMargin="2dp"
                app:widthThreshold="-1dp">

                <com.threethan.launcher.activity.view.LcSliderLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/lc_bkg_button_middle"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp"
                    android:tooltipText="@string/icon_size_tip"
                    tools:ignore="RtlSymmetry,UnusedAttribute">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_icon_scale_l" />

                    <SeekBar
                        android:id="@+id/scaleSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="3dp"
                        android:layout_weight="1"
                        android:foreground="@drawable/lc_fg_focusable"
                        android:max="255"
                        android:padding="0dp"
                        android:progressBackgroundTint="@android:color/white"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:thumb="@null" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_icon_scale_h" />
                </com.threethan.launcher.activity.view.LcSliderLinearLayout>



            <com.threethan.launcher.activity.view.LcSliderLinearLayout
                android:paddingHorizontal="5dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:background="@drawable/lc_bkg_button_middle"
                android:orientation="horizontal"
                android:tooltipText="@string/icon_margin_tip"
                tools:ignore="RtlSymmetry,UnusedAttribute">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_margin_l"/>

                <SeekBar
                    android:id="@+id/marginSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:foreground="@drawable/lc_fg_focusable"
                    android:max="255"
                    android:layout_marginHorizontal="3dp"
                    android:padding="0dp"
                    android:progressBackgroundTint="@android:color/white"
                    android:progressDrawable="@drawable/seekbar_custom"
                    android:thumb="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_margin_h"/>
            </com.threethan.launcher.activity.view.LcSliderLinearLayout>
                <com.threethan.launcher.activity.view.LcSliderLinearLayout
                    android:paddingHorizontal="5dp"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:background="@drawable/lc_bkg_button_middle"
                    android:orientation="horizontal"
                    android:tooltipText="@string/icon_corners_tip"
                    android:gravity="center"
                    tools:ignore="RtlSymmetry,UnusedAttribute">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_icon_corner_l"/>

                    <SeekBar
                        android:id="@+id/cornerSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:foreground="@drawable/lc_fg_focusable"
                        android:padding="0dp"
                        android:layout_marginHorizontal="3dp"
                        android:progressBackgroundTint="@android:color/white"
                        android:progressDrawable="@drawable/seekbar_custom"
                        android:thumb="@null" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_icon_corner_h"/>

                </com.threethan.launcher.activity.view.LcSliderLinearLayout>
        </com.threethan.launcher.activity.view.WidthAdaptiveLinearLayout>
        </LinearLayout>

        <TextView
            style="@style/SettingSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_options" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <com.threethan.launcher.activity.view.WidthAdaptiveLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/lc_bkg_button_section"
                android:backgroundTint="#0000"
                android:orientation="horizontal"
                android:padding="0dp"
                app:childMargin="2dp"
                app:widthThreshold="300dp"
                tools:ignore="UnusedAttribute">

                <com.threethan.launchercore.view.LcButton
                    android:id="@+id/editTopBarButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/lc_bkg_button_middle"
                    android:drawableEnd="@drawable/ic_dialog"
                    android:text="@string/customize_top_bar" />

                <com.threethan.launchercore.view.LcButton
                    android:id="@+id/advancedSettingsButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/lc_bkg_button_middle"
                    android:drawableEnd="@drawable/ic_dialog"
                    android:text="@string/advanced_header" />
            </com.threethan.launcher.activity.view.WidthAdaptiveLinearLayout>

            <FrameLayout
                android:layout_width="54dp"
                android:layout_height="match_parent">

                <com.threethan.launchercore.view.LcText
                    android:id="@+id/refreshButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/lc_bkg_button"
                    android:tooltipText="@string/refresh_button"
                    tools:ignore="UnusedAttribute" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_refresh" />
            </FrameLayout>
        </LinearLayout>

        <com.threethan.launchercore.view.LcButton
            android:id="@+id/manageVariantsButton"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lc_bkg_button"
            android:drawableEnd="@drawable/ic_dialog"
            android:text="@string/manage_variants" />
    </LinearLayout>
</ScrollView>