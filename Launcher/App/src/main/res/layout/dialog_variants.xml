<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:orientation="vertical"
    android:padding="0dp"
    tools:ignore="TextSizeCheck">

    <LinearLayout
        android:id="@+id/itemLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <View
            android:id="@+id/view"
            android:layout_width="500dp"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/SettingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="@string/manage_variants" />

        <TextView
            style="@style/SettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:alpha="0.7"
            android:background="@drawable/lc_bkg_button_section"
            android:gravity="center"
            android:minHeight="50sp"
            android:text="@string/manage_variants_details" />

        <LinearLayout
            android:id="@+id/variantMetastore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/lc_bkg_button_top"
            android:backgroundTint="#8000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_icon_feed"
                    tools:ignore="DuplicateIds" />

                <TextView
                    style="@style/SettingSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:padding="0dp"
                    android:text="@string/variant_metastore" />

                <TextView
                    android:id="@+id/variantCurrent"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingStart="5dp"
                    android:paddingEnd="7dp"
                    android:paddingVertical="3dp"
                    android:background="#FFF"
                    android:drawableTint="#000"
                    android:drawablePadding="5dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="@string/current" />

            </LinearLayout>

            <include
                android:id="@+id/variantButtons"
                layout="@layout/variant_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="10dp" />

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:minHeight="60sp"
                android:text="@string/variant_metastore_details" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/variantPlaystore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/lc_bkg_button_top"
            android:backgroundTint="#8000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_icon_store"
                    tools:ignore="DuplicateIds" />

                <TextView
                    style="@style/SettingSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:padding="0dp"
                    android:text="@string/variant_playstore" />
                <TextView
                    android:id="@+id/variantCurrent"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingStart="5dp"
                    android:paddingEnd="7dp"
                    android:paddingVertical="3dp"
                    android:background="#FFF"
                    android:drawableTint="#000"
                    android:drawablePadding="5dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="@string/current"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>


            <include
                android:id="@+id/variantButtons"
                layout="@layout/variant_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="10dp" />

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:minHeight="60sp"
                android:text="@string/variant_playstore_details" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/variantSideload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/lc_bkg_button_bottom"
            android:backgroundTint="#8000"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_icon_library"
                    tools:ignore="DuplicateIds" />

                <TextView
                    style="@style/SettingSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:padding="0dp"
                    android:text="@string/variant_sideload" />
                <TextView
                    android:id="@+id/variantCurrent"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingStart="5dp"
                    android:paddingEnd="7dp"
                    android:paddingVertical="3dp"
                    android:background="#FFF"
                    android:drawableTint="#000"
                    android:drawablePadding="5dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="@string/current"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

            <include
                android:id="@+id/variantButtons"
                layout="@layout/variant_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="10dp" />

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:minHeight="60sp"
                android:text="@string/variant_sideload_details" />

        </LinearLayout>

        <TextView
            android:id="@+id/exitButton"
            style="@style/SettingButtonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/lc_bkg_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:text="@string/addons_exit"
            tools:ignore="NestedWeights">

        </TextView>

    </LinearLayout>
</ScrollView>