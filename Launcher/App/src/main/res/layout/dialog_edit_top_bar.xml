<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingVertical="20dp">

    <View
        android:id="@+id/view"
        android:layout_width="750dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/dismissButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="-30dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bkg_hover_button"
        android:foreground="@drawable/lc_fg_focusable"
        android:src="@drawable/ic_back" />

    <TextView
        style="@style/SettingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/customize_top_bar" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fillViewport="true"
        android:requiresFadingEdge="horizontal">

        <LinearLayout
            android:layout_width="760dp"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tbeStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/lc_bkg_button_section"
                android:foreground="@drawable/lc_fg_focusable"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bkg_blur_view">

                    <include layout="@layout/activity_main_status_widget" />
                </FrameLayout>

                <com.threethan.launchercore.view.LcSwitch
                    android:id="@+id/toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tbeGroups"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/lc_bkg_button_section"
                android:foreground="@drawable/lc_fg_focusable"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/tab_selected_left_dm"
                        android:gravity="center"
                        android:paddingStart="10dp"
                        android:text="@string/default_group_2d"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/tab_selected_right_dm"
                        android:gravity="center"
                        android:paddingEnd="10dp"
                        android:text="@string/default_group_vr"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <com.threethan.launchercore.view.LcSwitch
                    android:id="@+id/toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    android:switchPadding="10dp"
                    android:text="@string/enable_groups"
                    android:tooltipText="@string/enable_groups_tip"
                    tools:ignore="DuplicateIds,UnusedAttribute" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tbeSort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/lc_bkg_button_left"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:foreground="@drawable/lc_fg_focusable"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bkg_blur_view">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_sort_standard" />
                </FrameLayout>

                <com.threethan.launchercore.view.LcSwitch
                    android:id="@+id/toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tbeSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:background="@drawable/lc_bkg_button_middle"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:foreground="@drawable/lc_fg_focusable"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bkg_blur_view">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_search_button" />
                </FrameLayout>

                <com.threethan.launchercore.view.LcSwitch
                    android:id="@+id/toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tbeSettings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:background="@drawable/lc_bkg_button_right"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:foreground="@drawable/lc_fg_focusable"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bkg_blur_view">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_config" />
                </FrameLayout>

                <com.threethan.launchercore.view.LcSwitch
                    android:id="@+id/toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/transparent"
                    tools:ignore="DuplicateIds" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>