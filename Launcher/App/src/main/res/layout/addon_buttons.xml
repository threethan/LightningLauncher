<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addonButtonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="40dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    tools:showIn="@layout/dialog_addons_vr"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/addonUninstall"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:background="@drawable/bkg_button"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:ignore="DuplicateIds"
        tools:visibility="visible">

        <TextView
            style="@style/SettingButtonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="35dp"
            android:singleLine="true"
            android:text="@string/addons_uninstall"
            tools:ignore="NestedWeights,RtlSymmetry" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-35dp"
            android:layout_marginEnd="-8dp"
            android:src="@drawable/ic_uninstall" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addonDeactivate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:background="@drawable/bkg_button_default"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:ignore="DuplicateIds"
        tools:visibility="visible">

        <TextView
            style="@style/SettingButtonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:singleLine="true"
            android:text="@string/addons_deactivate"
            android:textColor="#FFFFFF"
            tools:ignore="NestedWeights,RtlSymmetry" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-35dp"
            android:layout_marginEnd="-8dp"
            android:src="@drawable/ic_activate"
            android:tint="#FFFFFF"
            tools:ignore="UseAppTint" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addonInstall"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
