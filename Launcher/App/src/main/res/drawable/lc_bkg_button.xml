<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle" >
                    <corners android:radius="26dp" />

                    <stroke android:color="#3000" android:width="1dp"/>
                </shape>
            </item>
        </selector>

    </item>
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <selector>
            <item android:state_hovered="true" android:drawable="@drawable/bkg_button_hover" />
            <item android:state_focused="true" android:drawable="@drawable/bkg_button_hover" />
            <item android:state_selected="true" android:drawable="@drawable/bkg_button_hover" />
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="25dp" />
                    <solid android:color="#20121214"/>
                    <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />
                    <size android:height="39dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle" >
                    <corners android:radius="25dp" />
                    <solid android:color="#70121214" />

                    <stroke android:color="#406F6F82" android:width="1.5dp"/>
                    <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp" />
                    <size android:height="40dp" android:width="40dp" />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>