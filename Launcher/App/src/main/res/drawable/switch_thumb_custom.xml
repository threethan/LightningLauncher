<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"  android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
                    <corners android:radius="20dp" />
                    <size android:width="22dp" android:height="22dp" />

                    <solid android:color="#FFF"/>
                    <stroke android:width="4dp" android:color="#0000" />
                </shape>
            </item>
            <item android:drawable="@drawable/lc_switch_check" />
        </layer-list>
    </item>
    <item android:state_checked="false"  android:state_enabled="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <corners android:radius="20dp" />
            <size android:width="22dp" android:height="22dp" />

            <solid android:color="#FFF"/>
            <stroke android:width="4dp" android:color="#0000" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <corners android:radius="20dp" />
            <size android:width="22dp" android:height="22dp" />

            <solid android:color="#4FFF"/>
            <stroke android:width="6dp" android:color="#0000" />
        </shape>
    </item>
</selector>
