<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="16.0dip" />
                    <stroke android:width="3.0dip" android:color="?ocCardHoverOutline" />
                    <solid android:color="@color/oc_black_a40" />
                </shape>
            </item>
            <item android:state_hovered="true">
                <shape android:shape="rectangle">
                    <corners android:radius="16.0dip" />
                    <stroke android:width="3.0dip" android:color="?ocCardHoverOutline" />
                    <solid android:color="@color/oc_black_a20" />
                </shape>
            </item>
            <item android:drawable="@android:color/transparent" />
        </selector>
    </item>
    <item>
        <bitmap android:gravity="center" android:src="@drawable/oc_icon_play_circle_filled_24_d2d2d2" android:tint="?ocIconOnMedia" />
    </item>
</layer-list>