<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="?ocButtonBorderRadius" />
            <solid android:color="?ocPositiveBackground" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="?ocButtonBorderRadius" />
                    <solid android:color="?ocPressedOverlay" />
                </shape>
            </item>
            <item android:state_hovered="true">
                <shape android:shape="rectangle">
                    <corners android:radius="?ocButtonBorderRadius" />
                    <solid android:color="?ocHoverOverlay" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>